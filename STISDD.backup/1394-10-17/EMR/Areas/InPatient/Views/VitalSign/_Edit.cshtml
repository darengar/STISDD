@model EMR.Models.VitalSign

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Edit Cardiology</h4>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">

            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.VitalSignId)
            @Html.HiddenFor(model => model.VisitId)

            <div class="form-group">
                @Html.LabelFor(model => model.LeadTime, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LeadTime)
                    @Html.ValidationMessageFor(model => model.LeadTime)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.BP, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.BP)
                    @Html.ValidationMessageFor(model => model.BP)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.HR, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HR)
                    @Html.ValidationMessageFor(model => model.HR)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RR, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.RR)
                    @Html.ValidationMessageFor(model => model.RR)
                </div>
            </div>
        </div>

    </div>

    <div class="modal-footer">
        <button class="btn" data-dismiss="modal">Cancel</button>
        <input class="btn btn-primary" type="submit" value="Save" />
    </div>
}