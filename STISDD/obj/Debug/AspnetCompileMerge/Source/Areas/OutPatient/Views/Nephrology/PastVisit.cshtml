@model IEnumerable<EMR.Models.Visit>
@{
    ViewBag.Title = "لیست معاینات نفرولوژی";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>لیست معاینات نفرولوژی</h2>
@Html.ActionLink("بازگشت", "Index", new { clinicId = ViewBag.ClinicId }, new { style = "font-size: 14px;", @class = "btn btn-danger" })
<br />
<p><h4> نام بیمار : @ViewBag.PatientName </h4></p>
<br />
<table class="table">
    <tr>
        <th>
            شناسه بیمار
        </th>
        <th>
            شناسه درمانگاه
        </th>
        <th>
            شناسه پذیرش
        </th>
        <th>
            تاریخ معاینه
        </th>
        <th>
            دانشجو
        </th>
        <th>
            پزشک
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PatientId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClinicId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdmissionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfStay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Collegian.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.FullName)
            </td>
            <td>
                @Html.ActionLink("نمایش", "VisitReport", new { patientId = item.PatientId, clinicId = item.ClinicId, admissionId = item.AdmissionId, visitId = item.VisitId })  |
                @Html.ActionLink("ویرایش", "Edit", new { patientId = item.PatientId, clinicId = item.ClinicId, admissionId = item.AdmissionId, visitId = item.VisitId })
            </td>
        </tr>
    }
</table>

@Html.ActionLink("بازگشت", "Index", new { clinicId = ViewBag.ClinicId }, new { style = "font-size: 14px;", @class = "btn btn-danger" })
