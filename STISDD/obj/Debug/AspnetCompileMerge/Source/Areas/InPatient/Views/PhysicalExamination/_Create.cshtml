@model EMR.Models.PhysicalExamination

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Add new Physical Examination</h4>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.Hidden("VisitId", new { ViewBag.VisitId })

            <div class="form-group">
                @Html.LabelFor(model => model.Heart, new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Heart)
                    @Html.ValidationMessageFor(model => model.Heart)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Lung, new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Lung)
                    @Html.ValidationMessageFor(model => model.Lung)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Extremities, new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Extremities)
                    @Html.ValidationMessageFor(model => model.Extremities)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ETC, new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ETC)
                    @Html.ValidationMessageFor(model => model.ETC)
                </div>
            </div>

        </div>
    </div>

    <div class="modal-footer">
        <button class="btn" data-dismiss="modal">Cancel</button>
        <input class="btn btn-primary" type="submit" value="Save" />
    </div>
}

