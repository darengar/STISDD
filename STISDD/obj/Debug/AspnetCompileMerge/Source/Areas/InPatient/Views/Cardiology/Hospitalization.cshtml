        <table>
            <tr>
                <td style="width: 70px; font-size: large; color: #4c6568; font-weight: 400;"> کلینیک : </td>
                <td style="width: 200px; font-size: xx-large; color: #ea5858; font-weight: 600; float:right;"> @ViewBag.ClinicName </td>
