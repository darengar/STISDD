    ViewBag.Title = "بستری بخش قلب";
    Layout = "~/Views/Shared/_Layout_Modal.cshtml";
}

<div style="direction:ltr; padding-bottom: 80px;">
    @*<div>
        @Html.ActionLink("Back to Cardiology patients List", "DHPatient", "Cardiology", new { ClinicId = ViewBag.ClinicId }, new { style = "color: Red; font-size: 18px;" })
