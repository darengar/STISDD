    <div>
        @Html.Partial("~/Areas/InPatient/Views/Laboratory/_Index.cshtml", (IEnumerable<EMR.Models.Laboratory>)ViewBag.Laboratory)
    </div>
    
    <div>
        @Html.Partial("_Index", (IEnumerable<EMR.Models.Cardiology>)ViewBag.Cardiology)
    </div>  
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/modalform")
    }