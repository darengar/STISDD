@model IEnumerable<EMR.Models.ChiefComplaint>

    <div id='myModal' class='modal fade in'>
        <div class="modal-dialog">
            <div class="modal-content">
                <div id='myModalContent'></div>
            </div>
        </div>
    </div>

    <div class="panel panel-primary">
        <div class="panel-heading"> C.C</div>

        <table class="table table-bordered table-hover">
            @foreach (var item in Model)
            {
                <tr>
                    <td style="width:20px">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="1000" data-close-others="true">
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Details", "Details", "ChiefComplaint", new { Area = "InPatient", id = item.ChiefComplaintId }, new { data_modal = "" })</li>
                                <li>@Html.ActionLink("Edit", "Edit", "ChiefComplaint", new { Area = "InPatient", id = item.ChiefComplaintId }, new { data_modal = "" })</li>
                            </ul>
                        </div>
                    </td>
                    <td>
                        @Html.Label("LeadTime", item.LeadTime.ToString()) &nbsp;|&nbsp; @Html.Label("ETC", item.ETC)
                    </td>
                </tr>
            }
        </table>
        <div class="panel-footer"></div>
    </div>
