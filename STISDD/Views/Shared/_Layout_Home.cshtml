<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">    
    @**********************hover effect*********************************************@
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    @*******************************************************************************@
    <link rel="shortcut icon" href="../favicon.ico">
    <link rel="stylesheet" type="text/css" href="~/Content/OrginalHoverEffect/demo.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/OrginalHoverEffect/style_common.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/OrginalHoverEffect/style1.css" />

    <title>@ViewBag.Title - پرونده الکترونیک بیماران</title>
    @Styles.Render("~/Content/css", "~/Content/menu")
    @Scripts.Render("~/bundles/modernizr", "~/bundles/menu")
</head>
<body class="body-home">
    @Html.ActionLink("مدیریت", "Administrator", "Home", new { Area="" }, new { @class = "btn", style = "margin-right:120px; float:right; margin-top:-35px;" })

    <div id='cssmenu' style="margin-top:315px; width: 1000px; margin-right: 155px; height:48px; background: none;">
        <ul style="margin-right: 20px; font-weight:bolder; font-size:large;">

            <li><a href='~/Home/Index'><span>خانه</span></a></li>

            <li><a href='~/Home/About'><span>درباره ما</span></a></li>

            <li><a href='~/Home/Help'><span>راهنمای سایت</span></a></li>

            <li>  @Html.Partial("_LoginPartial")  </li>

        </ul>
    </div>


    <div class="container body-home-content" style="margin-top:395px;">
        @RenderBody()
        <hr />
        <footer class="footer">
            <p>&copy; @DateTime.Now.ToString("yyyy") - برنامه پرونده الکترونیک بیماران دانشکده علوم پزشکی استان گلستان</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
